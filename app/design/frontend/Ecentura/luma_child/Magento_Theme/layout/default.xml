<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/ecentura-logo.png</argument>
                <argument name="logo_width" xsi:type="number">200</argument>
                <argument name="logo_height" xsi:type="number">200</argument>
                <argument name="logo_alt" xsi:type="string">Ecentura Logo</argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="top.search" remove="true"/>

        <referenceBlock name="minicart" remove="true"/>
    </body>
</page>
